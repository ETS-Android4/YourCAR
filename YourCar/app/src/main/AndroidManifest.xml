<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.yourcar">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> <!--sqlite-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!--sqlite-->
    <uses-permission android:name="android.permission.INTERNET"/>  <!--PERMISION INTERNET-->
    <uses-permission android:name="android.permission.SEND_SMS"/> <!--permissions SMS-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourCar">
        <activity
            android:name="com.example.yourcar.controller.HomeController"
            android:launchMode="singleInstance"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    <activity
        android:name="com.example.yourcar.controller.LoginController"/>
        <activity
            android:name="com.example.yourcar.controller.InscriptionController"/>

        <activity
            android:name="com.example.yourcar.controller.Appercu_vehiculeController"
            android:launchMode="singleInstance"/>

        <activity
            android:name="com.example.yourcar.controller.ControllerAllApplication"
            android:launchMode="singleInstance"/>


    </application>

</manifest>