<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/button_ronder"
    android:backgroundTint="@color/white"
   >


    <ImageView
        android:id="@+id/imgCar"
        android:layout_width="217dp"
        android:layout_height="142dp"
        android:src="@drawable/audiq5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/offresmarque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="224dp"

        android:layout_marginLeft="224dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/offresmodele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="224dp"

        android:layout_marginLeft="224dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />


    <TextView
        android:id="@+id/offresannee"
        android:layout_width="137dp"
        android:layout_height="26dp"

        android:layout_marginStart="224dp"

        android:layout_marginLeft="224dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435" />


    <TextView
        android:id="@+id/offreskilometrage"
        android:layout_width="137dp"
        android:layout_height="30dp"

        android:layout_marginStart="224dp"

        android:layout_marginLeft="224dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="140dp"
        android:layout_height="35dp"

        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />
    <!--android:text="prix : 16000e"-->



</androidx.constraintlayout.widget.ConstraintLayout>

